{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable",
      "es2017.object",
      "es2016",
      "es2015",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "./**/*.d.ts"],
  "exclude": [
    "node_modules",
    "oldsrc",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
